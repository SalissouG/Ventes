<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VenteApp.ClientsPage"
             Title="Clients"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#F0F8FF">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header Section with Title and Add Button -->
            <Grid ColumnDefinitions="*,auto,auto" Padding="0,0,0,10">
                <Label Text="Clients"
                       FontSize="28"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                <Button Text="Ajouter un client"
                        Clicked="OnAddClientClicked"
                        Grid.Column="1"
                        VerticalOptions="Center"
                        BackgroundColor="#056296"
                        TextColor="White"
                        />
                <Button Text="Télécharger PDF"
                        Clicked="OnDownloadClientsPdfClicked"
                        Grid.Column="2"
                         BackgroundColor="#056296"
                         TextColor="White"
                        />
            </Grid>

            <!-- Search Bar and Download Button -->
                <VerticalStackLayout>
                    <HorizontalStackLayout Spacing="15">
                        <Entry Placeholder="Rechercher un client"
                               HorizontalOptions="FillAndExpand"
                               TextChanged="OnSearchTextChanged"
                               BackgroundColor="White"
                               WidthRequest="300"
                               HeightRequest="40"/>
                       
                    </HorizontalStackLayout>
                </VerticalStackLayout>

            <!-- Client List with Header -->
            <Frame BorderColor="LightGray"
                   CornerRadius="10"
                   Padding="0"
                   BackgroundColor="White">
                <VerticalStackLayout>
                    <!-- Table Headers -->
                    <Grid Padding="10" BackgroundColor="#056296" ColumnDefinitions="*,*,*,*,*,*,*">
                        <Label TextColor="White" Text="Nom" FontAttributes="Bold" Grid.Column="0"/>
                        <Label TextColor="White" Text="Prénom" FontAttributes="Bold" Grid.Column="1"/>
                        <Label TextColor="White" Text="Numéro" FontAttributes="Bold" Grid.Column="2"/>
                        <Label TextColor="White" Text="Adresse" FontAttributes="Bold" Grid.Column="3"/>
                        <Label TextColor="White" Text="Email" FontAttributes="Bold" Grid.Column="4"/>
                        <Label TextColor="White" Text="Actions" FontAttributes="Bold" Grid.Column="5" Grid.ColumnSpan="2" />
                    </Grid>

                    <!-- Client List -->
                    <ListView ItemsSource="{Binding Clients}"
                              HasUnevenRows="True"
                              SeparatorVisibility="Default">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid Padding="10" ColumnDefinitions="*,*,*,*,*,*,*">
                                        <!-- Client Data Columns -->
                                        <Label Text="{Binding Nom}" Grid.Column="0" VerticalOptions="Center"/>
                                        <Label Text="{Binding Prenom}" Grid.Column="1" VerticalOptions="Center"/>
                                        <Label Text="{Binding Numero}" Grid.Column="2" VerticalOptions="Center"/>
                                        <Label Text="{Binding Adresse}" Grid.Column="3" VerticalOptions="Center"/>
                                        <Label Text="{Binding Email}" Grid.Column="4" VerticalOptions="Center"/>

                                        <!-- Action Buttons -->
                                        <Button Text="Modifier"
                                                Clicked="OnEditClientClicked"
                                                CornerRadius="10"
                                                Grid.Column="5"/>
                                        <Button Text="Supprimer"
                                                BackgroundColor="#FF4136"
                                                TextColor="White"
                                                CornerRadius="10"
                                                Command="{Binding BindingContext.DeleteCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                                CommandParameter="{Binding .}"
                                                Grid.Column="6"/>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </VerticalStackLayout>
            </Frame>

            <!-- Pagination Controls -->
            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center" Padding="0,20,0,0">
                <Button Text="Précédent"
                        Command="{Binding PreviousPageCommand}"
                        BackgroundColor="#056296"
                        TextColor="White"
                        CornerRadius="10"
                        Padding="12,6"/>
                <Label Text="{Binding CurrentPage, StringFormat='Page {0} de {Binding TotalPages}'}"
                       VerticalOptions="Center"/>
                <Button Text="Suivant"
                        Command="{Binding NextPageCommand}"
                        BackgroundColor="#056296"
                        TextColor="White"
                        CornerRadius="10"
                        Padding="12,6"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
