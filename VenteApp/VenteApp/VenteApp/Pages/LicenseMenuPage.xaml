<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VenteApp.LicenseMenuPage"
             Title="Entrer Licence"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#F0F8FF">

    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">

        <!-- Input for Licence Key -->
        <Label Text="Entrez votre licence" FontSize="24" HorizontalOptions="Center"   FontAttributes="Bold"/>
        <Entry x:Name="LicenceEntry" Placeholder="ClÃ© de licence" WidthRequest="300" />

        <!-- Button to Validate the Licence -->
        <Button Text="Valider" Clicked="OnValidateLicence" WidthRequest="150" />

        <!-- Validation Message -->
        <Label x:Name="ValidationMessageLabel" TextColor="Red" FontSize="16" HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>
