<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VenteApp.ProductsPage">

    <ScrollView>
        <VerticalStackLayout Padding="40" Spacing="20">

            <!-- Search and Add Button -->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="End">
                <Entry Placeholder="Recherche" WidthRequest="400" />
                <Button Text="Rechercher" />
            </HorizontalStackLayout>

            <!-- Add Product Button -->
            <Button Text="Ajouter" HorizontalOptions="End" />

            <!-- Table Headers -->
            <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*"
              BackgroundColor="LightGray"
              Padding="5"
              RowSpacing="5">
                <Label Text="Nom" FontAttributes="Bold" Grid.Column="0" HorizontalOptions="Start"  />
                <Label Text="Description" FontAttributes="Bold" Grid.Column="1" HorizontalOptions="Start" />
                <Label Text="Prix" FontAttributes="Bold" Grid.Column="2" HorizontalOptions="Start" />
                <Label Text="Quantité" FontAttributes="Bold" Grid.Column="3" HorizontalOptions="Start" />
                <Label Text="Catégorie" FontAttributes="Bold" Grid.Column="4" HorizontalOptions="Start"  />
                <Label Text="Taille" FontAttributes="Bold" Grid.Column="5" HorizontalOptions="Start" />
                <Label Text="Date Limite" FontAttributes="Bold" Grid.Column="6" HorizontalOptions="Start" />
                <Label Text="Actions" FontAttributes="Bold" Grid.Column="7" Grid.ColumnSpan="2" HorizontalOptions="Start" />
            </Grid>

            <!-- Product List -->
            <ListView ItemsSource="{Binding Products}" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*"
                              Padding="5"
                              RowSpacing="5">

                                <!-- Product Data Columns -->
                                <Label Text="{Binding Nom}" Grid.Column="0" HorizontalOptions="Start" />
                                <Label Text="{Binding Description}" Grid.Column="1" HorizontalOptions="Start" />
                                <Label Text="{Binding Prix, StringFormat='{0:C}'}" Grid.Column="2" HorizontalOptions="Start" />
                                <Label Text="{Binding Quantite}" Grid.Column="3" HorizontalOptions="Start" />
                                <Label Text="{Binding Categorie}" Grid.Column="4" HorizontalOptions="Start" />
                                <Label Text="{Binding Taille}" Grid.Column="5" HorizontalOptions="Start" />
                                <Label Text="{Binding DateLimite, StringFormat='{0:dd/MM/yyyy}'}" Grid.Column="6" HorizontalOptions="Start" />

                                <!-- Action Buttons -->
                                <Button Text="Modifier"
                                    Grid.Column="7"
                                    WidthRequest="80"
                                    HorizontalOptions="Start"
                                    Command="{Binding BindingContext.EditCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                    CommandParameter="{Binding .}" />
                                <Button Text="Supprimer"
                                    Grid.Column="8"
                                    WidthRequest="80"
                                    BackgroundColor="Red"
                                    TextColor="White"
                                    HorizontalOptions="Start"
                                    Command="{Binding BindingContext.DeleteCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                    CommandParameter="{Binding .}" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
